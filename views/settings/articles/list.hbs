<div class="card" style="margin-top:0px;">
  <div class="card-body">
    <h4 class="header-title">Articles
      <button type="button" class="btn btn-outline-primary btn-rounded alignToTitle" onclick="rightModal('settings/articles/create', 'add articles')"> <i class="mdi mdi-plus"></i>Add Article</button>
    </h4>
    <br><br>
    <div class="alert alert-warning" role="alert">
      <i class="dripicons-information mr-2"></i>Articles</strong>.
    </div>

<div class="table-responsive-sm">
      <table id="basic-datatable" class="table table-striped dt-responsive nowrap" width="100%">
        <thead>
          <tr style="background-color: #313a46; color: #ababab;">
            <th>Title</th>
            <th>Caption</th>
            <th>Author</th>
            <th>Article</th>
            <th>options</th>
          </tr>
        </thead>
        <tbody>
          {{#each articles}}
            <tr>
              <td>{{title}}</td>
              <td>{{caption}}</td>
              <td>{{author}}</td>
              <td>{{article}}</td>
              <td>
              <div class="dropdown text-center">
      					<button type="button" class="btn btn-sm btn-icon btn-rounded btn-outline-secondary dropdown-btn dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></button>
      					<div class="dropdown-menu dropdown-menu-right">
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="rightModal('/settings/articles/{{id}}', 'update articles');">edit</a>
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="confirmModal('/settings/articles/trash/{{id}}', showAllArticles )">trash</a>
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="confirmModal('/settings/articles/remove/{{id}}', showAllArticles )">delete</a>
      					</div>
              </td>
            </tr>
            {{/each}}
        </tbody>
      </table>
      </div>
  </div> <!-- end card body-->
</div>
