
<form method="POST" class="d-block ajaxForm" action="/settings/services" enctype="multipart/form-data" >
    <h4><i class="dripicons-plus"></i> Create services</h4><hr>
    <div class="form-row">
        <div class="form-group col-md-12">
        <label for="name">Name *</label>
            <input type="text" class="form-control" id="name" name ="name" required>
        <small id="namelbl"  class="form-text text-muted">name</small>
        </div>
         <div class="form-group col-md-12">
            <label for="groupId">Select Company</label>
            <select name="groupId" class="form-control" id="groupId">
                <option value="">select Company</option>
                {{#each Companies}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group col-md-12">
            <label for="imageUrl">Image</label>
            <div class="custom-file-upload">
                <input type="file" class="form-control" id="imageUrl" name = "imageUrl">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="description">Descriptions</label>
            <div class="custom-file-upload">
                <textarea class="form-control" id="description" name = "description" style="height: 45vh;"></textarea>
            </div>
        </div>
        <div class="form-group spinner hidden col-md-12">
        <div class="spinner-border" style="margin-left:45%;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        </div>
        <div class="form-group  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">add service</button>
        </div>
    </div>
</form>
<script>
    $(document).ready(function() {
        $('#groupId').select2({
                dropdownParent: $('#right-modal')
            });
    });
     $(".ajaxForm").submit(function(e) {
        $(".spinner").removeClass("hidden");
            e.preventDefault();
            var form = $(this);
            ajaxSubmit(e, form, "POST", showAllServices);
    });
</script>

