 <form method="POST" class="col-5 aboutUsSettings offset-3" action=" route('about_us/update') ;?>" id = "about_us_settings">
      <div class="row justify-content-left">
        <div class="content-flex" style="margin-top: 70px;">
          <div class="form-group row mb-3">
            <label class="col-md-3 col-form-label" for="about_us">Title</label>
            <div class="col-md-9">
              <input type="text" style="border: 1px solid rgb(169, 178, 255);" class="form-control"/>
            </div>
          </div>
          <div class="form-group row mb-3">
            <label class="col-md-3 col-form-label" for="details"></label>
            <div class="col-md-9">
              <textarea style="border: 1px solid rgb(169, 178, 255);" name="details" id="details" class="form-control" placeholder="about us information" rows="8" cols="80"></textarea>
            </div>
          </div>
          <div class="form-group row mb-3">
            <label class="col-md-3 col-form-label" for="example-fileinput">Image</label>
            <div class="col-md-9 custom-file-upload">
              <div class="wrapper-image-preview" style="margin-left: -6px;">
                <div class="box" style="width: 250px;">
                  <div class="js--image-preview" style=""></div>
                  <div class="upload-options">
                    <label for="about_us_image" class="btn"> <i class="fa fa-camera"></i> upload image</label>
                    <input id="about_us_image" style="visibility:hidden;" type="file" class="image-upload" name="about_us_image" accept="image/*">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group row mb-3">
            <button type="submit" class="btn btn-info col-xl-4 col-lg-4 col-md-12 col-sm-12" >update settings</button>
          </div>
          <div class="text-center form-group row mb-3">
            {{!-- <button type="submit" class="btn btn-secondary col-xl-4 col-lg-4 col-md-12 col-sm-12" >update settings</button> --}}
          </div>
        </div>
      </div>
    </form>