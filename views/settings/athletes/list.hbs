<div class="card" style="margin-top:0px;">
  <div class="card-body">
    <h4 class="header-title">Athletes
      <button type="button" class="btn btn-outline-primary btn-rounded alignToTitle" onclick="rightModal('settings/athletes/create', 'add athletes')"> <i class="mdi mdi-plus"></i>Add Athletes</button>
    </h4>
    <br><br>
    <div class="alert alert-warning" role="alert">
      <i class="dripicons-information mr-2"></i>Athletes</strong>.
    </div>

<div class="table-responsive-sm">
      <table id="basic-datatable" class="table table-striped dt-responsive nowrap" width="100%">
        <thead>
          <tr style="background-color: #313a46; color: #ababab;">
            <th>Picture</th>
            <th>Athlete</th>
            <th>Style</th>
            <th>height</th>
            <th>gender</th>
            <th>options</th>
          </tr>
        </thead>
        <tbody>
          {{#each athletes}}
            <tr>
              <td><img src="{{headImage}}" style="width: 6vw; border-radius:100%; border:2px solid #fdfeff;"></td>
              <td>{{firstname}} {{sirname}}</td>
              <td>{{style}}</td>
              <td>{{height}}</td>
              <td>{{gender}}</td>
              <td>
              <div class="dropdown text-center">
      					<button type="button" class="btn btn-sm btn-icon btn-rounded btn-outline-secondary dropdown-btn dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></button>
      					<div class="dropdown-menu dropdown-menu-right">
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="rightModal('/settings/athletes/edit/{{id}}', 'update athletes');">edit</a>
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="confirmModal('/settings/athletes/remove/{{id}}', showAllAthletes )">delete</a>
      					</div>
              </td>
            </tr>
            {{/each}}
        </tbody>
      </table>
      </div>
  </div> <!-- end card body-->
</div>
