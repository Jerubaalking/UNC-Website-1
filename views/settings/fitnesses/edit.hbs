
<form method="POST" class="d-block ajaxForm" action="/settings/fitness/update" enctype="multipart/form-data" >
{{fitness}}
{{#each fitness}}
    <div class="form-row">
        <div class="form-group col-md-12">
        <label for="title">Title *</label>
        <input type="hidden" value="{{id}}" name="id">
            <input type="text" value="{{title}}" class="form-control" id="title" name ="title" required>
        <small id="titlelbl"  class="form-text text-muted">title</small>
        </div>
         <div class="form-group col-md-12">
        <label for="linkto">Link section to url *</label> 
            <input type="text" value="{{linkto}}" class="form-control" id="linkto" placeholder="'http://...' or '/name' if link is in this site" name ="linkto">
        <small id="linktolbl" class="form-text text-muted">link section to..</small>
        </div>
        <div class="form-group col-md-12">
            <label for="imageUrl">Image</label>
            <img src="{{imageUrl}}" alt="/public/images/logo.jpeg">
            <div class="custom-file-upload">
                <input type="file" class="form-control" id="imageUrl" name = "imageUrl">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="imagePosition">Image position</label>
            <select name="imagePosition" id="imagePosition">
                <option value="" selected>select position</option>
                {{#ifEquals imagePosition "left"}}
                <option value="left" selected>left side</option>
                <option value="right" >right side</option>
                {{else}}
                <option value="left" >left side</option>
                <option value="right" selected>right side</option>
                {{/ifEquals}}
            </select>
            
        </div>

        <div class="form-group col-md-12">
            <label for="details">Details</label>
            <div class="custom-file-upload">
                <textarea class="form-control" id="details" name = "details" style="height: 50vh;">{{details}}</textarea>
            </div>
        </div>
        <div class="form-group spinner hidden col-md-12">
        <div class="spinner-border" style="margin-left:45%;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        </div>
        <div class="form-group  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">update Fitness</button>
        </div>
    </div>
    {{/each}}
</form>
<script>
     $(document).ready(function() {
        initSelect2(['#imagePosition']);
    });
     $(".ajaxForm").submit(function(e) {
        $(".spinner").removeClass("hidden");
            e.preventDefault();
            var form = $(this);
        ajaxSubmit(e, form, showAllFitness);
    });
</script>

