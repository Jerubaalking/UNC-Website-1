
<form method="POST" class="d-block ajaxForm" action="/settings/games" enctype="multipart/form-data" >
    <h4><i class="dripicons-plus"></i>  Create Game</h4><hr>
    <div class="form-row">
        <div class="form-company col-md-12">
        <label for="name">Name *</label>
            <input type="text" class="form-control" id="name" name ="name" required>
        <small id="namelbl"  class="form-text text-muted">name</small>
        </div>
        <div class="form-company col-md-12">
            <label for="imageUrl">Image</label>
            <div class="custom-file-upload">
                <input type="file" class="form-control" id="imageUrl" name = "imageUrl">
            </div>
        </div>
        <div class="form-company col-md-12">
            <label for="details">Details</label>
            <textarea class="form-control" id="details"  name="details" placeholder="Details here..." style="height:30vh;"></textarea>
        </div>
        <div class="form-company col-md-12">
            <label for="description">Descriptions</label>
            <textarea class="form-control" id="description"  name="description" placeholder="Description here..." style="height:50vh;"></textarea>
        </div>
        <div class="form-company spinner hidden col-md-12">
        <div class="spinner-border" style="margin-left:45%;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        </div>
        <div class="form-company  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">add game</button>
        </div>
    </div>
</form>
<script>
     $(".ajaxForm").submit(function(e) {
        $(".spinner").removeClass("hidden");
            e.preventDefault();
            var form = $(this);
            ajaxSubmit(e, form,"POST", showAllGames);
    });
</script>

