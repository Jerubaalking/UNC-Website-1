
<form method="POST" class="d-block ajaxForm" action="/settings/portfolios" enctype="multipart/form-data" >
    <h4><i class="dripicons-plus"></i>  Create portfolio</h4><hr>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="groupId">Portfolio of Group..?</label>
            <select name="groupId" id="groupId" class="form-control select2" data-toggle="select2" required>
                <option value="" selected>select group</option>
                {{#each Groups}}
                <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <small id="groupIdlbl" class="form-text text-muted">Group</small>
        </div>
        <div class="form-group col-md-12">
        <label for="mission">Mission *</label>
            <textarea class="form-control" id="mission" name="mission" placeholder="mission here... " required></textarea>
        <small id="missionlbl"  class="form-text text-muted">mission</small>
        </div>
        <div class="form-group col-md-12">
        <label for="vision">Vision *</label>
            <textarea class="form-control" id="vision" name="vision" placeholder="vision here... " required></textarea>
        <small id="visionlbl"  class= "form-text text-muted">vision</small>
        </div>
        <div class="form-group col-md-12">
            <label for="profile">Profile Details</label>
            <textarea class="form-control" id="profile"  name="profile" placeholder="Description here..." style="height:30vh;"></textarea>
        </div>
        <div class="form-group spinner hidden col-md-12">
        <div class="spinner-border" style="margin-left:45%;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        </div>
        <div class="form-group  col-md-12">
            <button class="btn btn-block btn-primary" type="submit">add portfolio</button>
        </div>
    </div>
</form>
<script>
    $(document).ready(function() {
        $('#groupId').select2({
                dropdownParent: $('#right-modal')
            });
    });
     $(".ajaxForm").submit(function(e) {
        $(".spinner").removeClass("hidden");
            e.preventDefault();
            var form = $(this);
            ajaxSubmit(e, form,"POST", showAllPortfolios);
    });
</script>

