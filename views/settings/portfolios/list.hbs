<div class="card" style="top:0;margin-top:0px;">
  <div class="card-body">
    <h4 class="header-title">Portfolios
      <button type="button" class="btn btn-outline-primary btn-rounded alignToTitle" onclick="rightModal('settings/portfolios/create', 'add portfolios')"> <i class="mdi mdi-plus"></i>Add Portfolios</button>
    </h4>
    <br><br>
    <div class="alert alert-warning" role="alert">
      <i class="dripicons-information mr-2"></i>Portfolios</strong>.
    </div>

<div class="table-responsive-sm">
      <table id="basic-datatable" class="table table-striped dt-responsive nowrap" width="100%">
        <thead>
          <tr style="background-color: #313a46; color: #ababab;">
            <th>group</th>
            <th>mission</th>
            <th>vision</th>
            <th>profile</th>
            <th>options</th>
          </tr>
        </thead>
        <tbody>
          {{#each portfolios}}
            <tr>
              <td>{{group.name}}</td>
              <td>{{mission}}</td>
              <td>{{vision}}</td>
              <td>{{profile}}</td>
              <td>
              <div class="dropdown text-center">
      					<button type="button" class="btn btn-sm btn-icon btn-rounded btn-outline-secondary dropdown-btn dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false"><i class="mdi mdi-dots-vertical"></i></button>
      					<div class="dropdown-menu dropdown-menu-right">
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="rightModal('/settings/portfolios/{{id}}', 'update portfolios');">edit</a>
      						<!-- item-->
      						<a href="javascript:void(0);" class="dropdown-item" onclick="confirmModal('/settings/portfolios/remove/{{id}}', showAllPortfolios )">delete</a>
      					</div>
              </td>
            </tr>
            {{/each}}
        </tbody>
      </table>
      </div>
  </div> <!-- end card body-->
</div>
