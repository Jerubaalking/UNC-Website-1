<div class="view-items-outer-wrp">
    <div class="view-items-wrp">






        <div data-drupal-views-infinite-scroll-content-wrapper=""
            class="views-infinite-scroll-content-wrapper clearfix">

            <div class="item-list">

                <ul class="l-flex--4col-1to4">

                    {{#each data}}
                    <li class="l-flex__item">
                        <div class="node node--type-athlete node--view-mode-all-athletes-result ds-1col clearfix">

                            <div class="c-listing-athlete-flipcard white">

                                <div class="c-listing-athlete-flipcard__inner">

                                    <div class="c-listing-athlete-flipcard__front">

                                        <div class="c-listing-athlete__thumbnail">
                                            <div
                                                class="field field--name-image field--type-entity-reference field--label-hidden field__item">
                                                <div class="layout layout--onecol">
                                                    <div class="layout__region layout__region--content">
                                                        <img src="{{headImage}}"
                                                            loading="lazy" class="image-style-teaser" width="400"
                                                            height="300">




                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="c-listing-athlete__text">

                                            <span class="c-listing-athlete__nickname">
                                                <div
                                                    class="field field--name-nickname field--type-string field--label-hidden">
                                                    <div class="field__item">"Abrek"</div>
                                                </div>
                                            </span>

                                            <span class="c-listing-athlete__name">
                                               {{firstname}} {{sirname}}
                                            </span>

                                            <span class="c-listing-athlete__title">
                                                <div
                                                    class="field field--name-stats-weight-class field--type-entity-reference field--label-hidden field__items">
                                                    <div class="field__item">Heavyweight</div>
                                                </div>
                                            </span>

                                            <span class="c-listing-athlete__record">0-0-0 (W-L-D)</span>

                                        </div>

                                    </div>

                                    <div class="c-listing-athlete-flipcard__back">

                                        <div class="c-listing-athlete__bgimg">
                                            <div
                                                class="field field--name-image-body-right field--type-entity-reference field--label-hidden field__item">
                                                <div class="layout layout--onecol">
                                                    <div class="layout__region layout__region--content">
                                                        <img src="{{headImage}}"
                                                            loading="lazy"
                                                            class="image-style-event-fight-card-upper-body-of-standing-athlete"
                                                            width="185" height="536">
                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="c-listing-athlete-flipcard__text__back">

                                            <span class="c-listing-athlete__nickname">
                                                <div
                                                    class="field field--name-nickname field--type-string field--label-hidden">
                                                    <div class="field__item">"Abrek"</div>
                                                </div>
                                            </span>

                                            <span class="c-listing-athlete__name">
                                                {{firstname}} {{sirname}}
                                            </span>

                                        </div>

                                        <div class="c-listing-athlete-flipcard__action">

                                            <a href="/athlete/profile/{{id}}" class="e-button--black "><span
                                                    class="e-button__text">

                                                    Athlete Profile
                                                </span></a>
                                        </div>


                                    </div>

                                </div>

                            </div>
                        </div>

                    </li>

                    {{/each}}
                </ul>

            </div>
            <div
                class="view view-promos-panel-views view-id-promos_panel_views view-display-id-brand_voice js-view-dom-id-89ac0fd12aa984f989c94ca469849e2bec11a7426549b7bfddc3288f82141a65">




            </div>
        </div>





    </div>
</div>