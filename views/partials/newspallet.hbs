<div class="l-container">
    <div class="l-container__content">
        <div class="c-three-up">
            {{#each news}}
            <div class="c-three-up__item">
                <article class="c-card--content-footer"
                    style="visibility: inherit; opacity: 1; transform: matrix(1, 0, 0, 1, 0, 0);">


                    <div class="c-card__media--content-footer">

                        <div class="layout layout--onecol">
                            <div class="layout__region layout__region--content">

                                <img src="/public/images/logo.jpeg"
                                    alt="Daniel Cormier, Michael Bisping &amp; Jon Anik At ORION 271" loading="lazy"
                                    class="image-style-card" width="780" height="440">




                            </div>
                        </div>



                    </div>

                    <div class="c-card__info--content-footer">
                        <span class="c-card__info-prefix--content-footer">Highlights</span>
                    </div>

                    <div class="c-card__title_text">
                        <div class="c-card__headline--content-footer">
                            <h3 class="e-t5" id="n-117697">
                                From The Arena | ORION:
                                Juma Kombo vs Shaban Derick
                            </h3>
                        </div>

                        <div class="c-card__body--content-footer e-p--small">

                            <div
                                class="clearfix text-formatted field field--name-teaser field--type-text-long field--label-hidden field__item">
                                <p>
                                    The Most Anticipated
                                    matches in Recent
                                    History</p>
                            </div>

                        </div>
                    </div>

                    <div class="c-card__action--content-footer">


                        <a href="#" class="e-button--minimal "
                            data-modal-callback="/ajax/modal/node/117697" aria-labelledby="n-117697"><span
                                class="e-button__text">

                                more
                            </span></a>
                    </div>

                </article>
            </div>
            {{/each}}
        </div>
    </div>
</div>